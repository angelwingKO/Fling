<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="addButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/addButtonBackground</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/icon_add</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="17">true</item>
    </style>

</resources>
